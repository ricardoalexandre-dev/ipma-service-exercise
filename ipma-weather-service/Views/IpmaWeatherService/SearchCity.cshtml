@model ipma_weather_service.Models.SearchCity

@{
    ViewData["Title"] = "SearchCity";
}

<div class="container">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityGlobalIdLocal" style="font-family: Arial"></label>
                <input asp-for="CityGlobalIdLocal" class="form-control" />
                <span asp-validation-for="CityGlobalIdLocal" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="IpmaWeatherService" asp-action="SearchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>

